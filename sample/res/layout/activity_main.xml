<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/radix2.yat.sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="radix2.yat.sample.MainActivity" >

    <radix2.yat.widget.TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Individual"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:ttfName="Roboto-Thin.ttf" />

    <radix2.yat.widget.TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="96dp"
        android:layout_marginRight="23dp"
        android:text="Individual"
        app:ttfName="Roboto-Light.ttf"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <radix2.yat.widget.TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="37dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="From Theme"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <radix2.yat.widget.TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        app:ttfName="Roboto-Black.ttf"
        android:text="Individual" />

    <radix2.yat.widget.TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="66dp"
        android:layout_marginLeft="44dp"
        android:text="From Theme"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <radix2.yat.widget.TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="From Theme"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <radix2.yat.widget.TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="15dp"
        android:text="From Theme"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>